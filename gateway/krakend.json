{
    "version": 3,
    "host": "0.0.0.0",
    "port": 8080,
    "endpoints": [
        {
            "endpoint": "/api/register",
            "method": "POST",
            "backend": [
                {
                    "url_pattern": "/register",
                    "method": "POST",
                    "host": ["http://auth-service:8000"],
                    "timeout": "5s"
                }
            ]
        },
        {
            "endpoint": "/api/login",
            "method": "POST",
            "backend": [
                {
                    "url_pattern": "/login",
                    "method": "POST",
                    "host": ["http://auth-service:8000"]
                }
            ]
        },
        {
            "endpoint": "/api/refresh",
            "method": "POST",
            "output_encoding": "no-op",
            "backend": [
                {
                    "url_pattern": "/refresh",
                    "method": "POST",
                    "host": ["http://auth-service:8000"],
                    "encoding": "no-op"
                }
            ]
        }
    ]
}