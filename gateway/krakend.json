{
    "version": 3,
    "host": "0.0.0.0",
    "port": 8080,
    "endpoints": [
        {
            "endpoint": "/api/register",
            "method": "POST",
            "backend": [
                {
                    "url_pattern": "/register",
                    "method": "POST",
                    "host": ["http://auth-service:8000"],
                    "timeout": "5s"
                }
            ]
        },
        {
            "endpoint": "/api/login",
            "method": "POST",
            "backend": [
                {
                    "url_pattern": "/login",
                    "method": "POST",
                    "host": ["http://auth-service:8000"]
                }
            ]
        },

        {
            "endpoint": "/api/refresh",
            "method": "POST",
            "output_encoding": "no-op",
            "backend": [
                {
                    "url_pattern": "/refresh",
                    "method": "POST",
                    "host": ["http://auth-service:8000"],
                    "encoding": "no-op"
                }
            ]
        },

        {
            "endpoint": "/api/account-delete",
            "method": "POST",
            "input_headers": ["Authorization", "Content-Type"],
            "backend": [
                {
                    "url_pattern": "/account-delete",
                    "method": "POST",
                    "host": ["http://auth-service:8000"]
                }
            ]
        },

        {
            "endpoint":"/api/account-delete/{user_id}",
            "method": "POST",
            "input_headers": ["Authorization", "Content-Type"],
            "backend": [
                {
                    "url_pattern": "/account-delete/{user_id}",
                    "method": "POST",
                    "host": ["http://auth-service:8000"]
                }
            ]
        },

        {
            "endpoint": "/api/logout",
            "method": "POST",
            "input_headers": ["Authorization", "Content-Type"],
            "backend": [
                {
                    "url_pattern": "/logout",
                    "method": "POST",
                    "host": ["http://auth-service:8000"]
                }
            ]
        },

        {
            "endpoint": "/api/profile",
            "method": "GET",
            "input_headers": ["Authorization", "Content-Type"],
            "backend": [
                {
                    "url_pattern": "/profile",
                    "method": "GET",
                    "host": ["http://user-service:8001"]
                }
            ]
        },

        {
            "endpoint": "/api/settings/edit-bio",
            "method": "PATCH",
            "input_headers": ["Authorization", "Content-Type"],
            "backend": [
                {
                    "url_pattern": "/edit-bio",
                    "method": "PATCH",
                    "host": ["http://user-service:8001"]
                }
            ]
        }
    ]
}